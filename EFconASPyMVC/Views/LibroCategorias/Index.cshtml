@model IEnumerable<EFconASPyMVC.Models.LibroCategoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Libro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Libro.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Id)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { item.LibroId, item.CategoriaId }) |
                    @Html.ActionLink("Details", "Details", new { item.LibroId, item.CategoriaId })|
                    @Html.ActionLink("Delete", "Delete", new { item.LibroId, item.CategoriaId })
            </td>
        </tr>
}
    </tbody>
</table>
